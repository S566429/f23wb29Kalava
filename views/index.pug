extends layout

block content
  h1= title
  p Welcome to #{title}
  p Bhavyasree kalava 
  button(type="button", class="btn btn-secondary") Press Me
  //Adding div
  //div(id="faster") Increase the speed.
  button(onclick="goFaster()") GoFaster
    div#faster

  //Adding script

  script.
    var mph = 20;
    var change = 1;

    function goFaster() {
      mph += change;
      change++;
      var fasterDiv = document.getElementById('faster');
      fasterDiv.textContent = 'MPH ' + mph + ' with change ' + change;
    }
  
